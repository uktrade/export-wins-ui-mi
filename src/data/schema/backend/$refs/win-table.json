{
	"non-hvc-wins": {
		"type": "array",
		"minItems": 10,
		"maxItems": 20,
		"items": {
			"type": "object",
			"required": [ "id", "win_date", "status", "company", "export_amount", "credit", "lead_officer" ],
			"properties": {

				"id": {
					"$ref": "#/definitions/id"
				},

				"win_date": {
					"$ref": "#/definitions/win_date"
				},

				"status": {
					"$ref": "#/definitions/status"
				},

				"company": {
					"$ref": "#/definitions/company"
				},

				"export_amount": {
					"$ref": "#/definitions/export_amount"
				},

				"credit": {
					"$ref": "#/definitions/credit"
				},

				"lead_officer": {
					"$ref": "#/definitions/lead_officer"
				}
			}
		}
	},

	"hvc-wins": {
		"type": "array",
		"minItems": 10,
		"maxItems": 20,
		"items": {
			"type": "object",
			"required": [ "hvc", "id", "win_date", "status", "company", "export_amount", "credit", "lead_officer" ],
			"properties": {

				"hvc": {
					"type": "object",
					"required": [ "code", "name" ],
					"properties": {
						"code": {
							"type": "string",
							"faker": {
								"random.number": [ 200 ]
							}
						},
						"name": {
							"type": "string",
							"faker": "lorem.words"
						}
					}
				},

				"id": {
					"$ref": "#/definitions/id"
				},

				"win_date": {
					"$ref": "#/definitions/win_date"
				},

				"status": {
					"$ref": "#/definitions/status"
				},

				"company": {
					"$ref": "#/definitions/company"
				},

				"export_amount": {
					"$ref": "#/definitions/export_amount"
				},

				"credit": {
					"$ref": "#/definitions/credit"
				},

				"lead_officer": {
					"$ref": "#/definitions/lead_officer"
				}
			}
		}
	},

	"definitions": {
		"id": {
			"type": "string",
			"faker": "random.uuid"
		},

		"win_date": {
			"type": "string",
			"faker": "date.recent"
		},

		"status": {
			"type": "string",
			"pattern": "email_not_sent|response_not_received|customer_confirmed|customer_rejected"
		},

		"company": {
			"type": "object",
			"required": [ "name", "cdms_id" ],
			"properties": {
				"name": {
					"type": "string",
					"faker": "company.companyName"
				},
				"cdms_id": {
					"type": "string",
					"faker": "random.number"
				}
			}
		},

		"export_amount": {
			"type": "number",
			"faker": {
				"finance.amount": [ 1000000, 1000000000 ]
			}
		},

		"credit": {
			"type": "boolean",
			"faker": "random.boolean"
		},

		"lead_officer": {
			"type": "object",
			"required": [ "name" ],
			"properties": {
				"name": {
					"type": "string",
					"faker": "name.findName"
				}
			}
		}
	}
}
