{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Investment FDI overview",

	"type": "array",
	"minItems": 4,
	"maxItems": 4,
	"items": {
		"type": "object",
		"required": [ "year", "high", "good", "standard" ],
		"properties": {

			"year": {
				"type": "string",
				"pattern": "20[0-9]{2}-[0-9]{2}"
			},

			"high": { "$ref": "#/definitions/result" },
			"good": { "$ref": "#/definitions/result" },
			"standard": { "$ref": "#/definitions/result" }
		}
	},

	"definitions": {

		"result": {
			"type": "object",
			"required": [ "count", "number_new_jobs__sum", "number_safeguarded_jobs__sum", "investment_value__sum" ],
			"properties": {

				"count": {
					"type": "number",
					"faker": "random.number"
				},

				"number_new_jobs__sum": {
					"type": "number",
					"faker": "random.number"
				},

				"number_safeguarded_jobs__sum": {
					"type": "number",
					"faker": "random.number"
				},

				"investment_value__sum": {
					"type": "number",
					"faker": "random.number"
				}
			}
		}
	}
}
