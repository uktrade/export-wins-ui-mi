{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Investment Sector Teams list",

	"type": "object",
	"required": [ "name", "description", "target", "investments" ],
	"properties": {

		"name": {
			"type": "string",
			"faker": "lorem.word"
		},

		"description": {
			"type": "string",
			"faker": "lorem.words"
		},

		"target": {
			"type": "object",
			"required": [ "hvc", "non_hvc", "total" ],
			"properties": {

				"hvc": { "$ref": "$refs/fdi.json#/number" },
				"non_hvc": { "$ref": "$refs/fdi.json#/number" },
				"total": { "$ref": "$refs/fdi.json#/number" }
			}
		},

		"investments": {
			"type": "object",
			"required": [ "hvc", "non_hvc" ],
			"properties": {

				"hvc": { "$ref": "#/definitions/investments" },
				"non_hvc": { "$ref": "#/definitions/investments" }
			}
		}
	},

	"definitions": {
		"investments": {
			"type": "array",
			"minItems": 5,
			"maxItems": 100,
			"items": {
				"type": "object",
				"required": [
					"id",
					"value",
					"project_code",
					"stage",
					"number_new_jobs",
					"number_safeguarded_jobs",
					"approved_high_value",
					"approved_good_value",
					"date_won",
					"client_relationship_manager",
					"client_relationship_manager_team",
					"company_name",
					"company_reference",
					"investment_value",
					"foreign_equity_investment",
					"sector",
					"uk_region",
					"company_country"
				],
				"properties": {

					"id": { "$ref": "$refs/fdi.json#/number" },

					"value": {
						"type": "string",
						"pattern": "(high|good|standard)"
					},

					"project_code": {
						"type": "string",
						"pattern": "^P-[0-9]{8}$"
					},

					"stage": {
						"type": "string",
						"pattern": "(Won|Verified|Pipeline)"
					},

					"number_new_jobs": { "$ref": "$refs/fdi.json#/number" },
					"number_safeguarded_jobs": { "$ref": "$refs/fdi.json#/number" },

					"approved_high_value": { "$ref": "$refs/fdi.json#/boolean" },
					"approved_good_value": { "$ref": "$refs/fdi.json#/boolean" },

					"date_won": {
						"type": "string",
						"faker": "date.recent"
					},

					"client_relationship_manager": {
						"type": "string",
						"faker": "name.findName"
					},

					"client_relationship_manager_team": {
						"type": "null"
					},

					"company_name": {
						"type": "string",
						"faker": "company.companyName"
					},

					"company_reference": {
						"type": "string",
						"pattern": "^ORG-[0-9]{8}"
					},

					"investment_value": { "$ref": "$refs/fdi.json#/value" },
					"foreign_equity_investment": { "$ref": "$refs/fdi.json#/value" },

					"sector": {
						"type": "object",
						"required": [ "name" ],
						"properties": {
							"name": {
								"type": "string",
								"faker": "lorem.words"
							}
						}
					},

					"uk_region": {
						"type": "object",
						"required": [ "name" ],
						"properties": {
							"name": {
								"type": "string",
								"faker": "address.county"
							}
						}
					},

					"company_country": {
						"type": "object",
						"required": [ "name", "iso_code" ],
						"properties": {

							"name": {
								"type": "string",
								"faker": "address.country"
							},

							"iso_code": {
								"type": "string",
								"faker": "address.countryCode"
							}
						}
					}
				}
			}
		}
	}
}
