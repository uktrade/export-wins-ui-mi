{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Investment Sector Teams list",

	"type": "array",
	"minItems": 5,
	"maxItems": 15,
	"items": {
		"type": "object",
		"required": [ "id", "name", "description", "sectors" ],
		"properties": {

			"id": {
				"type": "number",
				"faker": "random.number"
			},

			"name": {
				"type": "string",
				"faker": "lorem.word"
			},

			"description": {
				"type": "string",
				"faker": "lorem.words"
			},

			"sectors": {
				"type": "array",
				"minItems": 1,
				"maxItems": 2,
				"items": {
					"type": "object",
					"required": [ "id", "name", "disabled_on" ],
					"properties": {

						"id": {
							"type": "number",
							"faker": "random.number"
						},

						"name": {
							"type": "string",
							"faker": "lorem.words"
						},

						"disabled_on": {
							"type": "boolean",
							"faker": "random.boolean"
						}
					}
				}
			}
		}
	}
}
