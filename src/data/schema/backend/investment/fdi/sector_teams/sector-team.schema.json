{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "FDI Sector Team detail",

	"type": "object",
	"required": [ "name", "description", "overview", "markets" ],
	"properties": {

		"name": {
			"type": "string",
			"faker": "lorem.word"
		},

		"description": {
			"type": "string",
			"faker": "lorem.words"
		},

		"overview": {
			"$ref": "$refs/fdi.json#/fdi-overview"
		},

		"markets": {
			"type": "array",
			"minItems": 5,
			"maxItems": 10,
			"items": {
				"type": "object",
				"required": [ "id", "name", "verified", "confirmed", "pipeline", "target" ],
				"properties": {
					"id": { "type": "number", "faker": "random.number" },
					"name": { "type": "string", "faker": "lorem.words" },
					"verified": { "$ref": "#/definitions/market-info" },
					"confirmed": { "$ref": "#/definitions/market-info" },
					"pipeline": { "$ref": "#/definitions/market-info" },
					"target": { "$ref": "#/definitions/market-info" }
				}
			}
		}
	},

	"definitions": {
		"market-info": {
			"type": "object",
			"required": [ "total", "progress", "high", "good", "standard" ],
			"properties": {
				"total": { "type": "number", "faker": "random.number" },
				"progress": { "type": "number", "faker": "finance.amount" },
				"high": { "type": "number", "faker": "random.number" },
				"good": { "type": "number", "faker": "random.number" },
				"standard": { "type": "number", "faker": "random.number" }
			}
		}
	}
}
