{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Overseas regions overview",

	"type": "array",
	"minItems": 17,
	"maxItems": 17,
	"items": {
		"type": "object",
		"required": [ "hvc_performance", "id", "name", "markets", "values" ],
		"properties": {

			"hvc_performance": {
				"$ref": "#/definitions/hvc-performance"
			},
			"id": {
				"type": "number",
				"faker": "random.number"
			},
			"name": {
				"type": "string",
				"faker": "lorem.words"
			},
			"markets": {
				"type": "number",
				"faker": {
					"random.number": { "max": 25 }
				}
			},
			"values": {
				"$ref": "#/definitions/values"
			}
		}
	},

	"definitions": {

		"hvc-performance": {
			"type": "object",
			"required": [ "red", "amber", "green", "zero" ],
			"properties": {
				"red": {
					"type": "number",
					"faker": {
						"random.number": { "max": 25 }
					}
				},
				"amber": {
					"type": "number",
					"faker": {
						"random.number": { "max": 25 }
					}
				},
				"green": {
					"type": "number",
					"faker": {
						"random.number": { "max": 25 }
					}
				},
				"zero": {
					"type": "number",
					"faker": {
						"random.number": { "max": 25 }
					}
				}
			}
		},

		"values": {
			"type": "object",
			"required": [ "hvc", "non_hvc" ],
			"properties": {
				"hvc": {
					"type": "object",
					"required": [ "total_win_percent", "target", "current", "target_percent" ],
					"properties": {
						"total_win_percent": {
							"type": "object",
							"required": [ "confirmed", "unconfirmed" ],
							"properties": {
								"confirmed": {
									"type": "number",
									"faker": {
										"random.number": { "max" : 100 }
									}
								},
								"unconfirmed": {
									"type": "number",
									"faker": {
										"random.number": { "max" : 100 }
									}
								}
							}
						},
						"target": {
							"type": "number",
							"faker": "random.number"
						},
						"current": {
							"type": "object",
							"required": [ "confirmed", "unconfirmed" ],
							"properties": {
								"confirmed": {
									"type": "number",
									"faker": "random.number"
								},
								"unconfirmed": {
									"type": "number",
									"faker": "random.number"
								}
							}
						},
						"target_percent": {
							"type": "object",
							"required": [ "confirmed", "unconfirmed" ],
							"properties": {
								"confirmed": {
									"type": "number",
									"faker": {
										"random.number": { "max" : 125 }
									}
								},
								"unconfirmed": {
									"type": "number",
									"faker": {
										"random.number": { "max" : 125 }
									}
								}
							}
						}
					}
				},
				"non_hvc": {
					"type": "object",
					"required": [ "total_win_percent" ],
					"properties": {
						"total_win_percent": {
							"type": "object",
							"required": [ "confirmed", "unconfirmed" ],
							"properties": {
								"confirmed": {
									"type": "number",
									"faker": {
										"random.number": { "max" : 100 }
									}
								},
								"unconfirmed": {
									"type": "number",
									"faker": {
										"random.number": { "max" : 100 }
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
