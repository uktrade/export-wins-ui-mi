{
  "name": "export-wins-ui-mi",
  "version": "1.8.4",
  "description": "An MI dashboard for Export Wins",
  "main": "server.js",
  "govuk-template-version": "0.19.1",
  "engines": {
    "node": "6.9.1",
    "npm": "3.10.8"
  },
  "scripts": {
    "test": "npm run test:unit",
    "test-all": "run-s test:*",
    "test:unit": "JASMINE_CONFIG_PATH=src/test/app/jasmine.json jasmine",
    "test:stubs": "JASMINE_CONFIG_PATH=src/test/stubs/jasmine.json jasmine",
    "test:mocks": "JASMINE_CONFIG_PATH=src/test/mocks/jasmine.json jasmine",
    "test:client": "karma start",
    "heroku-postbuild": "npm run build:dist",
    "start": "NODE_ENV=production node --use-strict dist/server.js",
    "start:server": "node --use-strict server.js",
    "app": "node --use-strict src/app/app.js",
    "watch": "run-p watch:*",
    "watch:node": "nodemon src/app/app.js --ignore 'src/public/**/*' --ignore 'src/test/**/*'",
    "build": "grunt dist",
    "build:dist": "npm run sass:prod && grunt dist && npm run dist-install",
    "dist": "npm run build:dist && npm run start",
    "dist-install": "cd dist && npm install --production",
    "lint": "eslint .",
    "watch:sass": "node-sass src/public/sass/main.scss src/public/css/main.css --source-map src/public/css/main.css.map --source-map-contents --include-path ./node_modules/@uktrade/trade_elements/dist/sass/ -w -r",
    "sass:dev": "node-sass src/public/sass/main.scss src/public/css/main.css --source-map src/public/css/main.css.map --source-map-contents --include-path ./node_modules/@uktrade/trade_elements/dist/sass/",
    "sass:prod": "node-sass src/public/sass/main.scss src/public/css/main.css --include-path ./node_modules/@uktrade/trade_elements/dist/sass/ -x --output-style compressed"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uktrade/export-wins-ui-mi.git"
  },
  "keywords": [
    "node",
    "skeleton",
    "app"
  ],
  "author": "Graham Veal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/uktrade/export-wins-ui-mi/issues"
  },
  "homepage": "https://github.com/uktrade/export-wins-ui-mi#readme",
  "dependencies": {
    "@uktrade/trade_elements": "1.3.0",
    "body-parser": "1.16.0",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.14.0",
    "jsonwebtoken": "^7.2.1",
    "morgan": "^1.7.0",
    "nunjucks": "^3.0.0",
    "random-int": "^1.0.0",
    "request": "2.79.0",
    "serve-static": "1.11.2",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "eslint": "3.14.0",
    "grunt": "*",
    "grunt-contrib-clean": "*",
    "grunt-contrib-compress": "1.4.1",
    "grunt-contrib-concat": "*",
    "grunt-contrib-copy": "*",
    "grunt-contrib-cssmin": "*",
    "grunt-contrib-uglify": "*",
    "grunt-filerev": "*",
    "grunt-mkdir": "*",
    "grunt-replace": "^1.0.1",
    "grunt-usemin": "*",
    "jasmine": "2.5.3",
    "jasmine-core": "*",
    "karma": "1.4.0",
    "karma-chrome-launcher": "*",
    "karma-jasmine": "*",
    "load-grunt-tasks": "*",
    "node-sass": "4.3.0",
    "nodemon": "*",
    "npm-run-all": "3.1.2",
    "proxyquire": "^1.7.10"
  },
  "optionalDependencies": {
    "fsevents": "*"
  }
}
